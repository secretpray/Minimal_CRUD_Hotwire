<%= link_to "Back to posts", posts_path, class: 'link-nav' %>

<%= form_with(model: post) do |form| %>
  <%= render 'shared/errors', post: post %>

  <div class='form-group'>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :content, style: "display: block" %>
    <%= form.rich_text_area :content, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :vote, style: "display: block" %>
    <%= form.number_field :vote, class: 'form-control' %>
  </div>

  <div class='btn-group gap-2 align-center mt-3'>
    <%= form.submit class: 'btn btn-warning' %>
    <%= link_to "Cancel", @post, class: 'btn btn-outline-warning' %>
  </div>
<% end %>
