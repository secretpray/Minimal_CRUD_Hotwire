<%= turbo_stream_from 'posts' %>

<h3 class='text-yellow-500'>Create post</h3>
<div id='post_form'>
  <%= render 'posts/form', post: Post.new %>
</div>

<div class="flex mt-5 mb-4 justify-content-between align-center">
  <h2 class='text-yellow-500' id='posts_counter'>
    <%= render 'posts/posts_count', count: Post.count %>
  </h2>
  <div style='margin-right: 20px;'>
    <%= link_to "New post", new_post_path, class: 'btn btn-outline-warning' %>
  </div>
</div>

<%= turbo_frame_tag :posts do %>
  <div class="row my-4 justify-between">
    <%= render @posts %>
  </div>
<% end %>
